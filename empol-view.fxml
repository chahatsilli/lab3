<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="576.0" prefWidth="724.0" spacing="20.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hrmanagement.employeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <children>
            <TableView fx:id="tableView" layoutX="66.0" prefHeight="200.0" prefWidth="617.0">
                <columns>
                    <TableColumn fx:id="employeeIdColumn" text="employee_id" />
                    <TableColumn fx:id="nameColumn" text="name" />
                    <TableColumn fx:id="positionColumn" text="position" />
                    <TableColumn fx:id="departmentColumn" text="department" />
                    <TableColumn fx:id="emailColumn" text="email" />
                    <TableColumn fx:id="phoneColumn" text="phone" />
                    <TableColumn fx:id="salaryColumn" text="salary" />
                </columns>
            </TableView>
            <TextField fx:id="employeeid" layoutX="14.0" layoutY="200.0" promptText="Employee ID" />
            <TextField fx:id="name" layoutX="14.0" layoutY="240.0" promptText="Name" />
            <TextField fx:id="position" layoutX="14.0" layoutY="280.0" promptText="Position" />
            <TextField fx:id="department" layoutX="14.0" layoutY="320.0" promptText="Department" />
            <TextField fx:id="email" layoutX="14.0" layoutY="360.0" promptText="Email" />
            <TextField fx:id="phone" layoutX="14.0" layoutY="400.0" promptText="Phone" />
            <TextField fx:id="salary" layoutX="14.0" layoutY="440.0" promptText="Salary" />
            <Button layoutX="14.0" layoutY="480.0" mnemonicParsing="false" text="Insert" onAction="#insertEmployee" />
            <Button layoutX="90.0" layoutY="480.0" mnemonicParsing="false" text="Update" onAction="#updateEmployee" />
            <Button layoutX="160.0" layoutY="480.0" mnemonicParsing="false" text="load" onAction="#loadEmployee" />
            <Button layoutX="700.0" layoutY="480.0" mnemonicParsing="false" text="delete" onAction="#deleteEmployee" />


        </children>
    </AnchorPane>
</VBox>
